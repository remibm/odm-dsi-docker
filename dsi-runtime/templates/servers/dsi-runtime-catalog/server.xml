<server description="CIS Catalog Server">

    <featureManager>
        <feature>appSecurity-2.0</feature>
        <feature>restConnector-2.0</feature>
        <feature>ssl-1.0</feature>
        <feature>elasticCacheCatalog-1.0</feature>
    </featureManager>

    <logging
        traceSpecification="*=info"
        maxFiles="5" />

    <httpEndpoint
        id="defaultHttpEndpoint"
        host="*"
        httpPort="${http.port}"
        httpsPort="${https.port}" />

    <elasticCacheCatalog
        name="${ia.serverName}"
        catalogClusterRef="ccid"
        enableMBean="true"
	enableManagementConcentrator="false" />

    <xioEndpoint
        port="${ia.listenerPort}" />

    <elasticCacheCatalogCluster id="ccid">
        <server
            name="${ia.serverName}"
            host="${ia.host}"
            port="${ia.listenerPort}" />
        <!--  *TODO* Add when using multiple catalogs.
        <server name="*INSERT_CATALOG02_NAME*" host="*INSERT_CATALOG02_HOST*" port="*INSERT_CATALOG02_PORT*"/>
        <server name="*INSERT_CATALOG03_NAME*" host="*INSERT_CATALOG03_HOST*" port="*INSERT_CATALOG03_PORT*"/>
        -->
    </elasticCacheCatalogCluster>

    <serverCommands
        startServerTimeout="120"
        stopServerTimeout="120" />

    <ssl id="defaultSSLConfig"
        keyStoreRef="defaultKeyStore"
        sslProtocol="TLSv1.2" />

	<!-- *TODO* Add only when using collectives. For more information see http://www.ibm.com/support/knowledgecenter/SSEQTP_8.5.5/com.ibm.websphere.wlp.nd.multiplatform.doc/ae/twlp_sec_nist.html

    <ssl id="controllerConnectionConfig"
        sslProtocol="TLSv1.2"/>

    <ssl id="memberConnectionConfig"
        sslProtocol="TLSv1.2"/>

    -->

    <!-- *TODO* Add SSL configuration including a key store and
                optionally a trust store. For example:

    <keyStore
        id="defaultKeyStore"
        password="*INSERT_ENCODED_PASSWORD*" />

    -->

    <!-- *TODO* Add basic or LDAP user registry configuration.
                For example:

    <basicRegistry id="basic" realm="*INSERT_REALM_NAME*">
        <user name="*INSERT_USER_NAME*" password="*INSERT_ENCODED_PASSWORD*"/>
        <group name="*INSERT_GROUP_NAME*">
